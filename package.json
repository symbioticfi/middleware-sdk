{
  "name": "symbiotic-tests",
  "version": "1.0.0",
  "description": "Test helpers for Symbiotic protocol",
  "private": true,
  "scripts": {
    "testgen": "node test/helpers/ed25519TestGenerator.js",
    "sleep": "node -e \"setTimeout(()=>{}, Number(3)*1000)\"",
    "deploy:anvil1": "anvil --host 0.0.0.0 --port 8545 --timestamp 1746024269 --mnemonic \"test test test test test test test test test test test junk\" --auto-impersonate --chain-id 111 --block-time 1 --slots-in-an-epoch 4",
    "deploy:anvil2": "anvil --host 0.0.0.0 --port 8546 --timestamp 1746024269 --mnemonic \"test test test test test test test test test test test junk\" --auto-impersonate --chain-id 222 --block-time 1 --slots-in-an-epoch 4",
    "deploy:init": "forge script script/deploy/Init.s.sol:InitScript 25235 --sig \"run(uint256)\" --multi --broadcast --legacy --slow --skip-simulation --gas-estimate-multiplier 200",
    "deploy:first": "forge script script/deploy/First.s.sol:FirstScript 25235 --sig \"run(uint256)\" --rpc-url $ETH_RPC_URL_MASTER --broadcast --legacy --slow --skip-simulation --gas-estimate-multiplier 200",
    "deploy:second": "forge script script/deploy/Second.s.sol:SecondScript 25235 --sig \"run(uint256)\" --rpc-url $ETH_RPC_URL_SECONDARY --broadcast --legacy --slow --skip-simulation --gas-estimate-multiplier 200",
    "deploy:third": "forge script script/deploy/Third.s.sol:ThirdScript 25235 --sig \"run(uint256)\" --rpc-url $ETH_RPC_URL_MASTER --broadcast --legacy --slow --skip-simulation --gas-estimate-multiplier 200",
    "deploy:fourth": "forge script script/deploy/Fourth.s.sol:FourthScript 25235 --sig \"run(uint256)\" --rpc-url $ETH_RPC_URL_SECONDARY --broadcast --legacy --slow --skip-simulation --gas-estimate-multiplier 200",
    "deploy:fifth": "forge script script/deploy/Fifth.s.sol:FifthScript 25235 --sig \"run(uint256)\" --rpc-url $ETH_RPC_URL_MASTER --broadcast --legacy --slow --skip-simulation --gas-estimate-multiplier 200",
    "deploy:fourth_fifth": "concurrently \"yarn deploy:fifth\"",
    "deploy:sixth": "forge script script/deploy/Sixth.s.sol:SixthScript 25235 --sig \"run(uint256)\" --rpc-url $ETH_RPC_URL_MASTER --broadcast --legacy --slow --skip-simulation --gas-estimate-multiplier 200",
    "deploy:seventh": "forge script script/deploy/Seventh.s.sol:SeventhScript 25235 --sig \"run(uint256)\" --rpc-url $ETH_RPC_URL_MASTER --broadcast --legacy --slow --skip-simulation --gas-estimate-multiplier 200",
    "deploy:sixth_seventh": "concurrently \"yarn deploy:sixth\" \"yarn deploy:seventh\"",
    "deploy:anvil1_wait": "cast rpc evm_increaseTime 36000 --rpc-url $ETH_RPC_URL_MASTER",
    "deploy:anvil2_wait": "cast rpc evm_increaseTime 36000 --rpc-url $ETH_RPC_URL_SECONDARY",
    "deploy:anvil": "concurrently \"yarn deploy:anvil1\" \"yarn deploy:anvil2\"",
    "deploy:anvil_wait": "yarn deploy:anvil1_wait && yarn deploy:anvil2_wait",
    "deploy:scripts": "npm-run-all -s deploy:init deploy:first deploy:third deploy:fourth_fifth deploy:anvil_wait",
    "deploy": "concurrently \"yarn deploy:anvil\" \"yarn sleep && yarn deploy:scripts\""
  },
  "dependencies": {
    "@noble/curves": "^1.3.0",
    "ethereum-cryptography": "^2.1.3",
    "ethers": "^6.11.1"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "concurrently": "^9.1.2",
    "npm-run-all": "^4.1.5"
  }
}
