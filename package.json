{
  "name": "symbiotic-tests",
  "version": "1.0.0",
  "description": "Test helpers for Symbiotic protocol",
  "private": true,
  "scripts": {
    "testgen": "node test/helpers/ed25519TestGenerator.js",
    "sleep": "node -e \"setTimeout(()=>{}, Number(3)*1000)\"",
    "deploy:anvil1": "anvil --port 8545 --timestamp 1746024269 --mnemonic \"test test test test test test test test test test test junk\" --auto-impersonate --chain-id 111",
    "deploy:anvil2": "anvil --port 8546 --timestamp 1746024269 --mnemonic \"test test test test test test test test test test test junk\" --auto-impersonate --chain-id 222",
    "deploy:waitAnvils": "wait-on -v http-get://127.0.0.1:8545 http-get://127.0.0.1:8546",
    "deploy:init": "forge script script/deploy/Init.s.sol:InitScript 25235 --sig \"run(uint256)\" --broadcast",
    "deploy:first": "source .env && forge script script/deploy/First.s.sol:FirstScript 25235 --sig \"run(uint256)\" --rpc-url $ETH_RPC_URL_MASTER --broadcast",
    "deploy:second": "source .env && forge script script/deploy/Second.s.sol:SecondScript 25235 --sig \"run(uint256)\" --rpc-url $ETH_RPC_URL_SECONDARY --broadcast",
    "deploy:third": "source .env && forge script script/deploy/Third.s.sol:ThirdScript 25235 --sig \"run(uint256)\" --rpc-url $ETH_RPC_URL_MASTER --broadcast",
    "deploy:fourth": "forge script script/deploy/Fourth.s.sol:FourthScript 25235 --sig \"run(uint256)\" --broadcast",
    "deploy:anvil": "concurrently -k \"yarn deploy:anvil1\" \"yarn deploy:anvil2\"",
    "deploy:scripts": "npm-run-all -s deploy:init deploy:first deploy:second deploy:third deploy:fourth",
    "deploy": "concurrently -k \"yarn deploy:anvil\" \"yarn sleep && yarn deploy:scripts\""
  },
  "dependencies": {
    "@noble/curves": "^1.3.0",
    "ethereum-cryptography": "^2.1.3",
    "ethers": "^6.11.1"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "concurrently": "^9.1.2",
    "npm-run-all": "^4.1.5"
  }
}
